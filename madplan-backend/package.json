{
  "name": "madplan-backend",
  "version": "1.0.0",
  "description": "Backend API for MadPlan Kanban board application",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --config ./test/jest-integration.json",
    "test:smoke": "node scripts/smoke-tests.js",
    "test:connection": "node scripts/test-connection.js",
    "test:deployment": "node scripts/test-deployment.js",
    "migration:run": "node scripts/migrate.js run",
    "migration:rollback": "node scripts/migrate.js rollback",
    "migration:status": "node scripts/migrate.js status",
    "migration:create": "node scripts/migrate.js create",
    "deploy:staging": "bash scripts/blue-green-deploy.sh",
    "deploy:production": "bash scripts/blue-green-deploy.sh",
    "health:check": "node scripts/health-check.js"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@aws-sdk/client-cloudwatch-logs": "^3.879.0",
    "@aws-sdk/client-kms": "^3.879.0",
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.3.0",
    "@sentry/node": "^10.8.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dd-trace": "^5.64.0",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.11.24",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test/",
      "main.ts",
      ".module.ts$",
      ".interface.ts$",
      ".dto.ts$",
      ".input.ts$"
    ],
    "preset": "ts-jest",
    "testTimeout": 10000,
    "verbose": true
  }
}
