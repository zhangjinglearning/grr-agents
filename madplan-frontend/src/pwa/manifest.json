  "shortcuts": [
    {
      "name": "Create Board",
      "short_name": "New Board",
      "description": "Create a new Kanban board",
      "url": "/boards/new",
      "icons": [
        {
          "src": "/icons/shortcut-board.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Create Card",
      "short_name": "New Card", 
      "description": "Create a new card",
      "url": "/cards/new",
      "icons": [
        {
          "src": "/icons/shortcut-card.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search boards and cards", 
      "url": "/search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Tasks",
      "short_name": "Tasks",
      "description": "View my assigned tasks",
      "url": "/tasks",
      "icons": [
        {
          "src": "/icons/shortcut-tasks.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".madplan", ".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/plain", "application/pdf"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+madplan",
      "url": "/board/%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "scope_extensions": [
    {
      "origin": "https://madplan.app"
    }
  ]
}