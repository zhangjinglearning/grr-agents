{
  "name": "madplan-frontend",
  "version": "1.0.0",
  "description": "Frontend application for MadPlan Kanban board",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "pinia": "^2.1.7",
    "@apollo/client": "^3.9.0",
    "@vue/apollo-composable": "^4.0.0",
    "graphql": "^16.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "typescript": "~5.4.5",
    "vue-tsc": "^2.0.6",
    "vite": "^5.2.0",
    "vitest": "^1.5.0",
    "eslint": "^8.57.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.22.0",
    "prettier": "^3.2.5",
    "@vitest/ui": "^1.5.0",
    "@vue/test-utils": "^2.4.5",
    "jsdom": "^24.0.0",
    "@vitest/coverage-v8": "^1.5.0",
    "tailwindcss": "^3.4.3",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}